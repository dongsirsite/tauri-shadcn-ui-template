{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-shadcn-ui-template",
  "version": "0.1.0",
  "identifier": "com.tauri-shadcn-ui-template.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:10003",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-shadcn-ui-template",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/fastapi-server"]
  },
  "plugins": {
    "shell": {
      "sidecar": true,
      "scope": [
        {
          "name": "fastapi-server",
          "cmd": "fastapi-server",
          "args": ["8000"]
        }
      ]
    }
  }
}
